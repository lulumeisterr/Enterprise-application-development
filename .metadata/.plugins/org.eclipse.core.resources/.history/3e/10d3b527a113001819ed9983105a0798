package br.com.fiap.financias.util;

import java.util.ArrayList;
import java.util.List;

import javax.persistence.EntityManager;

import br.com.fiap.financias.bean.Conta;

public class PopularConta {

	public static void main(String[] args) {

		EntityManager em = new JPAUtil().getEntityManager();
		int j = 0;
		
		for (int i = 0; i < 5; i++) {

			em.getTransaction().begin();

			Conta c = new Conta();

			
			c.setTitular("Luska");
			c.setAgencia("90");
			c.setNumero("3");
			c.setBanco("Banco Itau");

			do{
				
				if(c.getTitular().equals("Luska")){
					c.setTitular("Jose");
				}else if(c.getTitular().equals("Jose")){
					c.setTitular("Skazin");
				}
			}while(c.getTitular().equals("Luska"));
			
			em.persist(c);
			em.getTransaction().commit();
			
		}
		
		em.close();


	}





}


