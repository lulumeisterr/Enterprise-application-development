package br.com.fiap.financias.util;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

public class JPAUtil {
	
	//financias é o nome da persistence-unit , Para cada classe 
	private static EntityManagerFactory em = Persistence.createEntityManagerFactory("financias");
	
	
	public  EntityManager getEntityManager(){
		return em.createEntityManager();
		
		//O método createEntityManagerFactory irá 
		//gerar um EntityManagerFactory baseado nas configurações do persistence.xml. 
	}
	

	public EntityManager Fechar(){
		em.close();
	}
	
}
