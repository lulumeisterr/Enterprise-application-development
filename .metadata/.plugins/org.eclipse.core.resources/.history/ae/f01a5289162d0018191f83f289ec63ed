package br.com.fiap.genericDAO;

public interface GenericDAO<Tabela, Chave>{

	/*
	 * PADRÃO SINGLETON - INSTANCIADO APENAS UMA VEZ

	1 - ATRIBUTO STATICO DO TIPO DO OBJ QUE É UNICO
	2 - CONSTRUTOR PRIVADO
	3 - METODO STATICO ONDE EXISTE UMA UNICA VALIDAÇÃO PARA O OBJT 
	
	
	 */
	
	
	
	/*
	 * Criar um DAO que possa ser reutilizado (via herança) para as operações básicas
	   de persistência (CRUD);
	 * 
	 */
	
	
	//Cadastrar
	void Inserir(Tabela tabela);
	
	//Buscar
	Tabela Buscar(Tabela tabela);
	
	//Excluir
	void Excluir(Chave codigo);
	
	//Atualizar
	void Atualizar(Tabela tabela);
	
	//Commitar
	void commit();
	
	
	
}
