package br.com.fiap.teste;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

import br.com.fiap.bean.financias.Conta;

public class Teste_Conta {

	public static void main(String [] args){
		
		Conta Account = new Conta();
		
		Account.setTitular("Lucas");
		Account.setAgencia("103");
		Account.setNumero("1001");
		Account.setBanco("Bradesco");
		
		/*
		 * chamar a JPA , para persistir no banco
		 * EntityManager é uma classe que realizara todas as operações nas entidades O gerenciador de entidades
		 * 
		 * Deve se criar o EntityManagerFactory
		 */
		
		
		EntityManagerFactory emf = Persistence.createEntityManagerFactory("financias");
		EntityManager em = emf.createEntityManager();
		
		em.getTransaction().begin();
		em.persist(Account);
		
		
		em.close();
		emf.close();
		
		
		
	}
	
}
