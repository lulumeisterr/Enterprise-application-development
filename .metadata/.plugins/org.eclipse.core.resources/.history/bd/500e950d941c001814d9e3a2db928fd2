package br.com.fiap.dao.impl;

import java.util.Calendar;
import java.util.GregorianCalendar;

import javax.persistence.EntityManager;

import br.com.fiap.bean.EnumEscolaridade;
import br.com.fiap.bean.Funcionario;
import br.com.fiap.jpa.dao.FuncionarioDAO;

public class FuncionarioDAOImpl implements FuncionarioDAO{
	
	private  EntityManager em;

	public FuncionarioDAOImpl(EntityManager em) {
		super();
		this.em = em;
	}
	
	@Override
	public void gravar(Funcionario f) {
	
			f = new Funcionario("Lucas" , 
				new GregorianCalendar(2017,Calendar.FEBRUARY,30) , 
				Calendar.getInstance(), 
				25000 , 
				null ,
				EnumEscolaridade.ENSINO_SUPERIOR);
			
				em.persist(f);
		
	}

	@Override
	public void apagar(int codigo) {
		
		Funcionario f = em.find(Funcionario.class, codigo);
		em.remove(f);
		
	}

	@Override
	public void atualizar(Funcionario f) {
		
		
		
	}

	@Override
	public Funcionario buscar(int codigo) {
		// TODO Auto-generated method stub
		return null;
	}
	
	

}
