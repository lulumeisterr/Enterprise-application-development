package br.com.fiap.jpa.entity;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.ManyToOne;
import javax.persistence.SequenceGenerator;
import javax.persistence.Table;

@Entity
@Table(name = "T_ITEM_PEDIDO")
@SequenceGenerator(sequenceName="SQ_ITEM_PEDIDO" , allocationSize = 1 , name="Itempedido")
public class ItemPedido {
	
	@GeneratedValue(generator = "Itempedido" ,strategy = GenerationType.SEQUENCE)
	@Id
	@Column(name = "cd_Item")
	private int codigo;
	
	@Column(name = "vl_item")
	private double valor;
	
	@Column(name = "qt_item")
	private int quantidade;
	
	@ManyToOne
	private Pedido pedido;

	public ItemPedido(){
		
	}
	
	public ItemPedido(int codigo, double valor, int quantidade, Pedido pedido) {
		super();
		this.codigo = codigo;
		this.valor = valor;
		this.quantidade = quantidade;
		this.setPedido(pedido);
	}

	public double getValor() {
		return valor;
	}

	public void setValor(double valor) {
		this.valor = valor;
	}

	public int getQuantidade() {
		return quantidade;
	}

	public void setQuantidade(int quantidade) {
		this.quantidade = quantidade;
	}

	public Pedido getPedido() {
		return pedido;
	}

	public void setPedido(Pedido pedido) {
		this.pedido = pedido;
	}
	
	
	
	
	
	
	
}
