package br.com.fiap.teste;

import java.math.BigDecimal;
import java.util.Calendar;

import javax.persistence.EntityManager;

import br.com.fiap.constantes.bean.TipoMovimentacao;
import br.com.fiap.financias.bean.Conta;
import br.com.fiap.financias.bean.Movimentacao;
import br.com.fiap.financias.util.JPAUtil;

public class TesteJPA_RELACIONAMENTO {
	
	public static void main(String[] args) {
	
		Conta c = new Conta();
		
		c.setAgencia("1001");
		c.setBanco("Bradesco");
		c.setNumero("4002");
		c.setTitular("Lucas Rodrigues");
		
		Movimentacao mov = new Movimentacao();
		mov.setData(Calendar.getInstance());
		mov.setDescricao("Loja de controle");
		mov.setTipo(TipoMovimentacao.SAIDA);
		mov.setValor(new BigDecimal("220.00"));
		
		EntityManager em = new JPAUtil().getEntityManager();
		
		em.getTransaction().begin();
		
		
		
		
		em.getTransaction().commit();
		em.close();
		
	}

}
